extends ../layout

block content
    body
    form(action='/employees/' + employee.id, method='post')
        // cf. https://qiita.com/ozhaan/items/c1e394226c1d5acb7f0e
        <input name="_method" type="hidden" value="put">
        div
            | ID: 
            #{employee.id}
        div
            | Name: 
            input(type='text', name='name', value=employee.name placeholder="Input Employee's Name")
        div
            | Department: 
            input(type='text', name='department', value=employee.department placeholder="")
        div
            | Gender: 
            input(type='radio', name='gender' value='male' checked=(employee.gender=="male"))
            | male
            input(type='radio', name='gender' value='female' checked=(employee.gender=="female"))
            | female
            input(type='radio', name='gender' value='other' checked=(employee.gender!="male"&&employee.gender!="female"))
            | other
        div
            | Birthday: 
            input(type='text', name='birth' value=employee.birth placeholder="Input Employee's Birthday")
        div
            | Joined Date: 
            input(type='text', name='joined_date' value=employee.joined_date placeholder="Input Employee's Joined Date")
        div
            | Payment: 
            input(type='text', name='payment' value=employee.payment placeholder="Input Employee's Payment")
        div
            | Note: 
            input(type='text', name='note' value=employee.note placeholder="Input Note")
        div
            input(type='submit', value='Submit')